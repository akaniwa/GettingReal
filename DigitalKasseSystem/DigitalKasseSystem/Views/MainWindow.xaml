<Window x:Class="DigitalKasseSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DigitalKasseSystem"
        mc:Ignorable="d"
        Title="Uldum Hal - Kiosk" 
        Height="{x:Static SystemParameters.PrimaryScreenHeight}" 
        Width="{x:Static SystemParameters.PrimaryScreenWidth}"
        WindowState="Maximized">
    
        
    <Grid>
        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Label Content="Hovedmenu" FontSize="48" HorizontalAlignment="Center" Margin="20"/>
            <UniformGrid Rows="2" Columns="2">
                <Button x:Name="SaleButton" Content="Salg" FontSize="36" Margin="20" Click="SaleButton_Click"/>
                <Button x:Name="AssortmentButton" Content="Sortiment" FontSize="36" Margin="20" Click="AssortmentButton_Click"/>
                <Button x:Name="ReportsButton" Content="Rapporter (Ikke implementeret)" FontSize="36" Margin="20" Click="NotImplementedButton_Click"/>
                <Button x:Name="SettingsButton" Content="Indstillinger (Ikke implementeret)" FontSize="36" Margin="20" Click="NotImplementedButton_Click"/>
            </UniformGrid>
        </StackPanel>
    </Grid>
</Window>
