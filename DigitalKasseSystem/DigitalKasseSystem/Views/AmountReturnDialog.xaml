<Window x:Class="DigitalKasseSystem.Views.AmountReturnDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DigitalKasseSystem.Views"
        mc:Ignorable="d"
        Title="AmountReturnDialog" Height="300" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <UniformGrid>
            <Label Name="ReturnAmountLabel" Content="Byttepenge: 0.00 kr." FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </UniformGrid>
        <UniformGrid Grid.Row="1">
            <Button Content="OK" FontSize="20" Click="OKButton_Click"/>
        </UniformGrid>
    </Grid>
</Window>
