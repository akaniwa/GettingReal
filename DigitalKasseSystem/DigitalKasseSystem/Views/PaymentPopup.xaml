<Window x:Class="DigitalKasseSystem.Views.PaymentPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DigitalKasseSystem.Views"
        mc:Ignorable="d"
        Title="PaymentPopup" Height="200" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <UniformGrid Grid.Row="1" VerticalAlignment="Center" Height="70">
            <Button Content="Kontant" Height="35" FontSize="20"/>
            <Button Content="MobilPay" Height="35" FontSize="20"/>
        </UniformGrid>
        <UniformGrid VerticalAlignment="Center" HorizontalAlignment="Center" Height="49" Width="372">
            <Label Content="Vælg en betalingsmethode:" FontSize="30"/>
        </UniformGrid>

    </Grid>
</Window>
