<Window x:Class="DigitalKasseSystem.Views.MobilPayPaymentDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DigitalKasseSystem.Views"
        mc:Ignorable="d"
        Title="MobilPayPaymentDialog" Height="750" Width="460">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="72*"/>
            <RowDefinition Height="200*"/>
            <RowDefinition Height="80*"/>
            <RowDefinition Height="15*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" >
            <Image x:Name="mobilpayImage" Height="250" Width="250" Source="/Image/mobilpayUldumHal.jpg"/>
            <Label x:Name="TotalLabel" Content="Total: 0.00 kr." FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </StackPanel>
        <UniformGrid VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="MobilPay" FontSize="40" FontWeight="Bold"/>
        </UniformGrid>
        <UniformGrid Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="OK" Height="100" Width="150" FontSize="20" Click="OkButton_Click"/>
        </UniformGrid>

    </Grid>
</Window>
