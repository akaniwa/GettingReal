<Window x:Class="DigitalKasseSystem.Views.AssortmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DigitalKasseSystem.Views"
        mc:Ignorable="d"
        Title="Uldum Hal - Kiosk - Sortiment" 
        Height="{x:Static SystemParameters.PrimaryScreenHeight}" 
        Width="{x:Static SystemParameters.PrimaryScreenWidth}"
        WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="652*"/>
            <RowDefinition Height="71*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <UniformGrid Grid.Row="2">
            <Button Content="Tilføj" FontSize="20" Command="{Binding Path=AddItemDescriptionCommand}" CommandParameter="{Binding}"/>
            <Button Content="Slet" FontSize="20" Command="{Binding Path=DeleteItemDescriptionCommand}" CommandParameter="{Binding}"/>
        </UniformGrid>
        <StackPanel Orientation="Horizontal">
            <TextBlock Width="10"/>
            <Button Name="ReturnButton" Content="🏠" FontSize="35" Width="50" Click="ReturnButton_Click" />
        </StackPanel>
        <ListBox Grid.Row="1" ItemsSource="{Binding Path=ItemDescriptionsVM, UpdateSourceTrigger=PropertyChanged}" Margin="10" FontSize="20" Name="AssortmentListBox" SelectedValue="{Binding SelectedItemDescriptionVM, Mode=TwoWay}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock>
                            <TextBlock.Text>
                                <Binding Path="Name"/>
                            </TextBlock.Text>
                        </TextBlock>
                        <TextBlock Text=" "/>
                        <TextBlock>
                            <TextBlock.Text>
                                <Binding Path="Price"/>
                            </TextBlock.Text>
                        </TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Canvas Grid.Column="1" Grid.Row="1">
            <Label Content="Varenummer:" Canvas.Left="79" Canvas.Top="84" FontSize="20"/>
            <Label Content="Billede Sti:" Canvas.Left="80" Canvas.Top="166" FontSize="20"/>
            <Label Content="Navn:" Canvas.Left="78" Canvas.Top="324" FontSize="20"/>
            <Label Content="Pris:" Canvas.Left="81" Canvas.Top="405" FontSize="20"/>
            <Label Content="Kategori:" Canvas.Left="80" Canvas.Top="484" FontSize="20"/>
            <TextBox x:Name="ItemNumberBox" Text="{Binding SelectedItemDescriptionVM.ItemNumber, UpdateSourceTrigger=PropertyChanged}" Canvas.Left="240" TextWrapping="Wrap" Canvas.Top="84" Width="556" Height="39" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
            <TextBox x:Name="ItemNameBox" Text="{Binding SelectedItemDescriptionVM.Name, UpdateSourceTrigger=PropertyChanged}" Canvas.Left="240" TextWrapping="Wrap" Canvas.Top="324" Width="556" Height="39" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Top" VerticalContentAlignment="Center" />
            <TextBox x:Name="ItemPriceBox" Text="{Binding SelectedItemDescriptionVM.Price, UpdateSourceTrigger=PropertyChanged}" Canvas.Left="240" TextWrapping="Wrap" Canvas.Top="404" Width="556" Height="39" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Top" VerticalContentAlignment="Center"/>
            <TextBox x:Name="ItemCategoriBox" Text="{Binding SelectedItemDescriptionVM.Categori, UpdateSourceTrigger=PropertyChanged}" Canvas.Left="239" TextWrapping="Wrap" Canvas.Top="484" Width="556" Height="39" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
            <TextBox x:Name="PicturePathBox" Text="{Binding SelectedItemDescriptionVM.PicturePath, UpdateSourceTrigger=PropertyChanged}" Canvas.Left="240" TextWrapping="Wrap" Canvas.Top="164" Width="279" Height="39" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top" VerticalContentAlignment="Center" IsEnabled="False"/>
            <Image Height="130" Canvas.Left="635" Canvas.Top="150" Width="130" HorizontalAlignment="Left" VerticalAlignment="Top" Source="{Binding Path=SelectedItemDescriptionVM.Picture}"/>
            <Button Content="..." Canvas.Left="525" Canvas.Top="164" HorizontalAlignment="Left" VerticalAlignment="Top" Height="40" Width="40" Click="ChoosePicButton_Click"/>
        </Canvas>

    </Grid>
</Window>
